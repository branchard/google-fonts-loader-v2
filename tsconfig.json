{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": [
      "DOM",
      "ES2021"
    ],
    /* Modules */
    "module": "commonjs",
    /* Emit */
    "sourceMap": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests",
    "script",
    "e2e",
    "playwright.config.ts"
  ]
}
